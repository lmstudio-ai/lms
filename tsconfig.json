{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "ES2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "incremental": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "stripInternal": true
  }
}
